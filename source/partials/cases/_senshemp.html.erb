<section class="bg-green-pastel">
  <div class="grid-container">
    <div class="grid-x grid-padding-x align-center text-center case-title">
      <h2 class="cell medium-10">Senshemp Online Shop</h2>
    </div>
    <div class="grid-x grid-padding-x align-center case-pictures">
      <div class="cell medium-11 large-10">
        <div class="carousel">
          <div>
            <div class="device desktop right">
              <%= partial 'partials/device_desktop' %>
              <%= image_tag 'senshemp/senshemp1.jpg' %>
            </div>
            <hr />
            <div class="device mobile left">
              <div class="device--mobile__header">
                <div class="speaker"></div>
              </div>
              <div class="device--mobile__image" style="background-image: url('../images/senshemp/senshemp-mobile1.jpg')"></div>
              <div class="device--mobile__footer">
                <div class="home-button"></div>
              </div>
            </div>
          </div>
          <div>
            <div class="device desktop">
              <%= partial 'partials/device_desktop' %>
              <%= image_tag 'senshemp/senshemp2.jpg' %>
            </div>
            <hr>
          </div>
          <div>
            <div class="device desktop">
              <%= partial 'partials/device_desktop' %>
              <%= image_tag 'senshemp/senshemp3.jpg' %>
            </div>
            <hr>
          </div>
        </div>
      </div>
    </div>
    <div class="grid-x grid-padding-x align-center case-info">
      <div class="cell mmedium-4 large-3 text-small">
        <p class="text-small"><small class="text-grey-muted">Context</small><br />2016, bitspire GmbH</p>
      </div>
      <div class="cell medium-8 large-7 text-small">
        <p class="text-small"><small class="text-grey-muted">Project</small><br />Concept and design for a content driven online shop</p>
      </div>
    </div>
  </div>
</section>
